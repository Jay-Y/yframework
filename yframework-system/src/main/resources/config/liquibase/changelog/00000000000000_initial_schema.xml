<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!-- Oracle Initialization required -->
    <!--<changeSet id="00000000000000" author="jay-y">-->
        <!--<createSequence sequenceName="server_sequence" startValue="1000" incrementBy="50"/>-->
    <!--</changeSet>-->

    <!--
        JHipster core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="jay-y">
        <createTable tableName="sys_office">
            <column name="id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="code" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="sort" type="integer">
                <constraints nullable="true"/>
            </column>

            <column name="type" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="category" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="grade" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="parent_id" type="bigint">
                <constraints nullable="true"/>
            </column>

            <column name="activated" type="boolean" valueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="remark" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <loadData encoding="UTF-8"
                  file="config/liquibase/offices.csv"
                  separator=";"
                  tableName="sys_office">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>

        <createTable tableName="sys_user">
            <column name="id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="office_id" type="varchar(32)">
                <constraints nullable="true"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password_hash" type="varchar(60)"/>
            <column name="first_name" type="varchar(50)"/>
            <column name="last_name" type="varchar(50)"/>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="true"/>
            </column>
            <column name="image_url" type="varchar(256)"/>
            <column name="lang_key" type="varchar(5)"/>
            <column name="reset_key" type="varchar(20)"/>
            <column name="reset_date" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="activation_key" type="varchar(20)"/>
            <column name="activated" type="boolean" valueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="remark" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <loadData encoding="UTF-8"
                  file="config/liquibase/users.csv"
                  separator=";"
                  tableName="sys_user">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
        <dropDefaultValue tableName="sys_user" columnName="created_date" columnDataType="datetime"/>

        <createTable tableName="sys_persistent_audit_event">
            <column name="event_id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="principal" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="event_date" type="timestamp"/>
            <column name="event_type" type="varchar(255)"/>
        </createTable>

        <createTable tableName="sys_persistent_audit_evt_data">
            <column name="event_id" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)"/>
        </createTable>
        <addPrimaryKey columnNames="event_id, name" tableName="sys_persistent_audit_evt_data"/>

        <createIndex indexName="idx_persistent_audit_event"
                     tableName="sys_persistent_audit_event"
                     unique="false">
            <column name="principal" type="varchar(50)"/>
            <column name="event_date" type="timestamp"/>
        </createIndex>

        <createIndex indexName="idx_persistent_audit_evt_data"
                     tableName="sys_persistent_audit_evt_data"
                     unique="false">
            <column name="event_id" type="varchar(32)"/>
        </createIndex>

        <createTable tableName="sys_role">
            <column name="id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="nameen" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="scope" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="sort" type="integer">
                <constraints nullable="true"/>
            </column>

            <column name="is_sys" type="bit" valueBoolean="false">
                <constraints nullable="true"/>
            </column>

            <column name="office_id" type="varchar(32)">
                <constraints nullable="true"/>
            </column>

            <column name="activated" type="boolean" valueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="remark" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <createTable tableName="sys_user_role">
            <column name="user_id" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, role_id" tableName="sys_user_role"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/roles.csv"
                  separator=";"
                  tableName="sys_role">
            <column name="is_sys" type="boolean"/>
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>

        <loadData encoding="UTF-8"
                  file="config/liquibase/users_roles.csv"
                  separator=";"
                  tableName="sys_user_role">
        </loadData>

        <createTable tableName="sys_dict">
            <column name="id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="label" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="activated" type="boolean" valueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="remark" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
        <loadData encoding="UTF-8"
                  file="config/liquibase/dicts.csv"
                  separator=";"
                  tableName="sys_dict">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>

        <createTable tableName="sys_menu">
            <column name="id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="sort" type="integer">
                <constraints nullable="true"/>
            </column>

            <column name="href" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="icon" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="permission" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="is_show" type="boolean" valueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="parent_id" type="varchar(32)">
                <constraints nullable="true"/>
            </column>

            <column name="activated" type="boolean" valueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="remark" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <createTable tableName="sys_role_menu">
            <column name="role_id" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="menu_id" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="role_id, menu_id" tableName="sys_role_menu"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/menus.csv"
                  separator=";"
                  tableName="sys_menu">
            <column name="is_show" type="boolean"/>
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp"/>
        </loadData>
        <loadData encoding="UTF-8"
                  file="config/liquibase/roles_menus.csv"
                  separator=";"
                  tableName="sys_role_menu">
        </loadData>

        <createTable tableName="sys_file_info">
            <column name="id" type="varchar(32)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="store_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="path" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="url" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="md5" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="activated" type="boolean" valueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="remark" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
    </changeSet>

</databaseChangeLog>
